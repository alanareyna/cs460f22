#include <iomanip>
#include <cmath>
using namespace std;


unsigned char i;
for (i = 1; i > 0; i++){
  cout << "The value of i is : " << int (i) << endl;
  cout << "The final value of i is : " << int (i) << endl;
 }
signed char i;
for (i = 1; i > 0; i++) {
  cout << "The value of i is : " << int (i) << endl;
  cout << "The final value of i is : " << int (i) << endl;
 }

